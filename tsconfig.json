{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@styles/*": ["./styles/*"],
      "@hooks/*": ["./hooks/*"],
      "@modules/*": ["./modules/*"],
      "@interfaces/*": ["./interfaces/*"]
    },
    "allowJs": true,
    "jsx": "preserve"
  },
  "include": ["./src/**/*.tsx", "./src/types/import.d.ts"],
  "exclude": ["node_modules"]
}

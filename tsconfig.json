{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "components/*": ["./components/*"],
      "pages/*": ["./pages/*"]
    }
  },
  "include": ["./src/**/*.tsx"],
  "exclude": ["node_modules"]
}
